<template name="moviesStarTemplate">
  <view class="starsContainer">
    <view class="stars">
      <block wx:for="{{stars}}" wx:for-item="i" wx:key="index">
        <image wx:if="{{i}}" src="/images/movies/star.png"></image>
        <image wx:else src="/images/movies/none-star.png"></image>
      </block>
    </view>
    <text class="startPoint">{{average}}</text>
  </view>
</template>