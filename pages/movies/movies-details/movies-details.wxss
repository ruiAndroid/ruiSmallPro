@import "../stars/stars-template.wxss";
.container{
    display:flex;
    flex-direction: column;
    
}


.head-img{
    width: 100%;
    height: 320rpx;
    -webkit-filter:blur(20px);
    position: absolute;
  left: 0;
  top: 0;
}
.head-img-container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 320rpx;
  position: absolute;
  left: 0;
  top: 0;
  padding-left: 40rpx;
  padding-top: 30rpx;
}
.main-title{
  font-size: 25px;
  color: #fff;
}
.sub-title{
  margin-top: 20rpx;
  font-size: 20px;
  color: #fff;
}
.movie-img{
  width: 180rpx;
  height: 280rpx;
  position: absolute;
    top:160rpx;
    right: 30rpx;
}
.like{
  margin-top: 30rpx;
}

.highlight-font{
  color: red;
  font-size: 15px;
}
.plain-font{
  color: gray;
  margin-left: 15rpx;
  margin-right: 25rpx;
  font-size: 15px;
}
.summary{
   margin-left:10rpx;
    margin-top: 200rpx;
    color: #777777;
}
.originalTitle{
  font-size: 15px;
}
.flex-row{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  height: 28px;
}
.mark{
  font-size: 15px;
  color: #1f3463;
  margin-right: 10rpx;
  text-align: center;
  line-height: 28px;
}
.actor{
  font-size: 15px;
  color: #1f3463;
  text-align: center;
  line-height: 28px;
  margin-left: 20rpx;
}
.hr{
  margin-top:45rpx;
    height:1px;
    width: 100%;
    background-color: #d9d9d9;
}
.synopsis{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.synopsis-font{
  font-size: 12px;
  color: #999;
  
}
.summary-content{
font-size: 12px;
  color: gainsboro;
  margin-top: 20rpx;
}

.cast{
    margin-left:40rpx;
    display:flex;
    flex-direction: column;
    margin-top:50rpx;
}

.cast-font{
    color: #999;
    margin-bottom: 40rpx; 
    font-size: 15px;
}

.cast-imgs{
  flex-wrap: nowrap;
}
.cast-container{
    display:inline-flex;
    flex-direction: column;
    margin-bottom: 50rpx;
    margin-right: 40rpx;
    width: 170rpx;
    text-align:center;
    
}
.cast-img{
    width: 170rpx;
    height: 210rpx;
}
.cast-name{
  font-size: 15px;
  word-break: break-all;
}
